<div class="body">
  <div class="container">
	 <div class="row">

	  <%= render 'books/list', book: @book %>

	  <div class="col-lg-9">
	      <h2>Users</h2>
	         <table class="table">
	            <thead>
	            <tr>
	             <th>image</th>
	             <th>name</th>
	            </tr> 
	            </thead>
	                <% @users.each do |a| %>
	                 	<tr>
	              		<td><%= attachment_image_tag a, :profile_image, :fill, 50, 50, fallback: "zz.jpg" %></td>
	                      <td><%= a.name %></td>
	                      <td><%= link_to "show",  user_path(a.id) %></td>
	                   </tr>
	                  </thead>    
	           <% end %>
	          </table>
	    </div>
	 </div>
  </div>
</div>