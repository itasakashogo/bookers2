
<div class="body">
　　<div class="container">
	<p class="notice"><%= notice %></p>
      <div class="row">
<% if @user.id == current_user.id then %>
 <%= render 'books/list', book:@book %>
 <% else %>
<div class="col-lg-3">
  <h2>User info</h2>
	<table class="table">
	      <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "zz.jpg" %>
	  
     <tr>
      <td>Name</td>
       <td><%= @user.name %></td>
        </tr>
          <tr>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
           </tr>
	       </table>
	         <%= link_to edit_user_path(@user.id) do %>
	         <div class="col-xs-12 glyphicon glyphicon-wrench btn btn-default"></div>
	         <% end %>

			     <%= form_for(@book) do |f| %>
			       <h2>New book</h2>
			         <h4>Title</h4>
			         <%= f.text_field :title, class: "col-xs-12" %><br>
			           <h4>Opinion</h4>
			            <%= f.text_area :body, class: "col-xs-12" %>
			             <div class="field create">
	                   <button class="btn btn-primary col-xs-12">Create book</button></div>
	<% end %>
 </div>
<% end %>

	        <div class="col-lg-9">
	      	   <h2>Books</h2>
	              <table class="table">
	      		<thead><tr>
	      			<th></th><th>Title</th><th>Opinion</th>
	      		</tr></thead>
	             <% @books.each do |book| %>
	            <section class="book-text">
	              <tr>
	             <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "zz.jpg" %></td>
	              <td class="title"><%= link_to book.title ,book_path(book.id) %></td>
	              <td class="body"><%= book.body %></td>
		           </tr>
	            </section>
	             <% end %>
	          </table>
             </div>
     </div>
  </div>
</div>　　