<!DOCTYPE html>
<html>
  <head>
    <title>BookApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'  %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
  <header style= "background-color: black">
    <div class="container">
     <div class="row" style= "color: white;">
        <div class="col-lg-1"></div>
        <div class="col-xs-12">
          <div id="slidemenu">
            <h4 class="pull-left">Bookers</h4>
            <ul class="nav navbar-nav navbar-right test" >
              <% if user_signed_in? %>
                <li class="" >
                  <%= link_to "Top", user_path(current_user), class: "glyphicon glyphicon-home nav-color" %>
                </li>
                <li class="">
                  <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user nav-color" %>
                </li>
                <li class="">
                  <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book nav-color" %>
                </li>
                <li class="">
                   <%= link_to 'logout', destroy_user_session_path, method: :delete,class: "glyphicon glyphicon-log-out nav-color" %>
                </li>
              <% else %>
                <li class="">
                  <%= link_to 'Home', root_path, class: "glyphicon glyphicon-home nav-color test" %>
                </li>
                <li class="">
                  <%= link_to 'About', about_index_path, class: "glyphicon glyphicon-link nav-color" %>
                </li>

                <li class="">
                  <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit nav-color" %>
                </li>
                <li class="">
                  <%= link_to "log in", new_user_session_path, class: "glyphicon glyphicon-log-in nav-color" %>
                </li>
              <% end %>
            </ul>
           </div>
        </div>
        <div class="col-lg-1"></div>
     </div> 
    </div>
  </header>

    <%= yield %>
        </body>

    
    <footer>
      <div class="container">
        <div class="row">
         <div class="col-xs-3 col-xs-offset-9">
        CopyRight Infratop.inc
         </div>
        </div>
      </div>
    </footer>


</html>
